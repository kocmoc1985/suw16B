// "~" Means all p elements after <img> om <img> finns
.item img ~ p{
    //
}

// Choose <ul> whoes direct parent is <header> and choose <li> inside that <ul>
header > ul > li{
    //
}

// When the mouse hovers on ".item" pass the event to <p>
.item:hover p{
    display: block;
}

//selects all <p> which have class "aClassName"
p.aClassName{
}

